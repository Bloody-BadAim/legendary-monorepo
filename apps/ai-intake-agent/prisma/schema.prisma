generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id           String   @id @default(cuid())
  name         String
  email        String
  company      String
  questionType String
  description  String   @db.Text

  // AI-generated
  category  String?
  urgency   Int?
  aiSummary String?

  status    String   @default("new")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
